class Solution {
    public int searchInsert(int[] nums, int target) {
        int left = 0, right = nums.length - 1;
        
        while (left <= right) {
            int mid = left + (right - left) / 2;
            
            // 1. If found, return index immediately
            if (nums[mid] == target) {
                return mid;
            } 
            // 2. If mid is too small, search the right half
            else if (nums[mid] < target) {
                left = mid + 1;
            } 
            // 3. If mid is too large, search the left half
            else {
                right = mid - 1;
            }
        }
        
        // If not found, 'left' is the correct insertion index
        return left;
    }
}
